---
import Layout from '../../layouts/Layout.astro';
import { getEntry } from 'astro:content';

const alaskaData = await getEntry('locations', 'alaska');
---

<Layout title="Virtual Speech Therapy Services in Alaska | Falcon Speech Services">
  <div class="max-w-7xl mx-auto">
    <!-- Header -->
    <div class="text-center mb-12">
      <h1 class="text-4xl font-bold text-gray-900 mb-4">Virtual Speech Therapy Services in Alaska</h1>
      <p class="text-lg text-gray-600 max-w-3xl mx-auto">
        {alaskaData.data.description}
      </p>
    </div>

    <!-- Virtual-Only Services -->
    <div class="mb-16 bg-blue-50 rounded-xl p-8">
      <div class="text-center mb-8">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">Bringing Speech Therapy to All of Alaska</h2>
        <p class="text-lg text-gray-600">
          Professional virtual speech therapy services connecting families across the Last Frontier
        </p>
      </div>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
        <div class="text-center">
          <div class="bg-blue-100 p-4 rounded-full w-16 h-16 mx-auto mb-4 flex items-center justify-center">
            <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h3 class="font-semibold text-gray-900 mb-2">Statewide Coverage</h3>
          <p class="text-sm text-gray-600">Serving all Alaska communities from Anchorage to Barrow</p>
        </div>
        
        <div class="text-center">
          <div class="bg-green-100 p-4 rounded-full w-16 h-16 mx-auto mb-4 flex items-center justify-center">
            <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h3 class="font-semibold text-gray-900 mb-2">Flexible Scheduling</h3>
          <p class="text-sm text-gray-600">Accommodating Alaska's unique time zones and schedules</p>
        </div>
        
        <div class="text-center">
          <div class="bg-purple-100 p-4 rounded-full w-16 h-16 mx-auto mb-4 flex items-center justify-center">
            <svg class="w-8 h-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
            </svg>
          </div>
          <h3 class="font-semibold text-gray-900 mb-2">Weather Independent</h3>
          <p class="text-sm text-gray-600">No travel concerns during harsh weather conditions</p>
        </div>
        
        <div class="text-center">
          <div class="bg-yellow-100 p-4 rounded-full w-16 h-16 mx-auto mb-4 flex items-center justify-center">
            <svg class="w-8 h-8 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
            </svg>
          </div>
          <h3 class="font-semibold text-gray-900 mb-2">Rural Friendly</h3>
          <p class="text-sm text-gray-600">Specialized experience with remote communities</p>
        </div>
      </div>
    </div>

    <!-- Services and Platforms -->
    <div class="mb-16">
      <div class="grid md:grid-cols-2 gap-8">
        <div class="bg-white rounded-lg p-6 shadow-md">
          <h3 class="text-xl font-semibold text-gray-900 mb-4">Available Services</h3>
          <ul class="space-y-2">
            {alaskaData.data.services.map(service => (
              <li class="flex items-center text-gray-600">
                <svg class="w-5 h-5 text-green-500 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                {service}
              </li>
            ))}
          </ul>
        </div>

        <div class="bg-white rounded-lg p-6 shadow-md">
          <h3 class="text-xl font-semibold text-gray-900 mb-4">Virtual Platforms</h3>
          <ul class="space-y-2">
            {alaskaData.data.virtualPlatforms.map(platform => (
              <li class="flex items-center text-gray-600">
                <svg class="w-5 h-5 text-primary mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 002 2z"></path>
                </svg>
                {platform}
              </li>
            ))}
          </ul>
        </div>
      </div>
    </div>

    <!-- Insurance Coverage -->
    <div class="mb-16 bg-gray-50 rounded-xl p-8">
      <h2 class="text-2xl font-bold text-gray-900 mb-6 text-center">Insurance Coverage in Alaska</h2>
      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
        {alaskaData.data.coverage.map(coverage => (
          <div class="text-center">
            <div class="bg-green-100 p-4 rounded-full w-16 h-16 mx-auto mb-4 flex items-center justify-center">
              <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <h3 class="font-medium text-gray-900">{coverage}</h3>
          </div>
        ))}
      </div>
    </div>

    <!-- Alaska-Specific Benefits -->
    <div class="mb-16">
      <h2 class="text-2xl font-bold text-gray-900 mb-8 text-center">Why Virtual Therapy Works Great for Alaska</h2>
      <div class="grid md:grid-cols-2 gap-8">
        <div class="bg-blue-50 rounded-lg p-6">
          <h3 class="text-xl font-semibold text-gray-900 mb-4">Overcoming Geographic Barriers</h3>
          <ul class="space-y-3 text-gray-600">
            <li class="flex items-start">
              <svg class="w-5 h-5 text-blue-600 mr-3 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              No need for expensive travel to urban centers
            </li>
            <li class="flex items-start">
              <svg class="w-5 h-5 text-blue-600 mr-3 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              Consistent therapy regardless of weather conditions
            </li>
            <li class="flex items-start">
              <svg class="w-5 h-5 text-blue-600 mr-3 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              Access to specialized services from anywhere in Alaska
            </li>
          </ul>
        </div>
        
        <div class="bg-green-50 rounded-lg p-6">
          <h3 class="text-xl font-semibold text-gray-900 mb-4">Tailored for Alaska Families</h3>
          <ul class="space-y-3 text-gray-600">
            <li class="flex items-start">
              <svg class="w-5 h-5 text-green-600 mr-3 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              Flexible scheduling for unique work patterns
            </li>
            <li class="flex items-start">
              <svg class="w-5 h-5 text-green-600 mr-3 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              Understanding of Alaska's cultural diversity
            </li>
            <li class="flex items-start">
              <svg class="w-5 h-5 text-green-600 mr-3 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              Experience with rural and remote communication needs
            </li>
          </ul>
        </div>
      </div>
    </div>

    <!-- Contact Section -->
    <div class="text-center">
      <h2 class="text-3xl font-bold text-gray-900 mb-4">Ready to Get Started?</h2>
      <p class="text-lg text-gray-600 mb-8 max-w-2xl mx-auto">
        Contact us for a free consultation to discuss your speech therapy needs in Alaska.
      </p>
      <div class="flex justify-center space-x-4">
        <a href="/contact" class="bg-primary text-white px-8 py-3 rounded-lg font-medium hover:bg-primary-700">
          Request Free Consultation
        </a>
        <a href="/services/remote/alaska" class="border border-primary text-primary px-8 py-3 rounded-lg font-medium hover:bg-primary-50">
          Learn More About Virtual Services
        </a>
      </div>
    </div>
  </div>
</Layout>