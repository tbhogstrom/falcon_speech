    description: "Neurodiversity affirming fluency programs combining in-person evaluations with convenient virtual sessions.",
    icon: "M8.625 12a.375.375 0 11-.75 0 .375.375 0 01.75 0zm0 0H8.25m4.125 0a.375.375 0 11-.75 0 .375.375 0 01.75 0zm0 0H12m4.125 0a.375.375 0 11-.75 0 .375.375 0 01.75 0zm0 0h-.375M21 12c0 4.556-4.03 8.25-9 8.25a9.764 9.764 0 01-2.555-.337A5.972 5.972 0 015.41 20.97a5.969 5.969 0 01-.474-.065 4.48 4.48 0 00.978-2.025c.09-.457-.133-.901-.467-1.226C3.93 16.178 3 14.189 3 12c0-4.556 4.03-8.25 9-8.25s9 3.694 9 8.25z"
  },
  {
    title: "Voice Therapy",
    description: "Hybrid approach for voice disorders, vocal nodules, and professional voice care with detailed progress tracking.",
    icon: "M12 18.75a6 6 0 006-6v-1.5m-6 7.5a6 6 0 01-6-6v-1.5m6 7.5v3.75m-3.75 0h7.5M12 15.75a3 3 0 01-3-3V4.5a3 3 0 116 0v8.25a3 3 0 01-3 3z"
  },
  {
    title: "Social Communication",
    description: "Neurodiversity affirming support for social language skills with alternating in-home and virtual sessions.",
    icon: "M18 18.72a9.094 9.094 0 003.741-.479 3 3 0 00-4.682-2.72m.94 3.198l.001.031c0 .225-.012.447-.037.666A11.944 11.944 0 0112 21c-2.17 0-4.207-.576-5.963-1.584A6.062 6.062 0 016 18.719m12 0a5.971 5.971 0 00-.941-3.197m0 0A5.995 5.995 0 0012 12.75a5.995 5.995 0 00-5.058 2.772m0 0a3 3 0 00-4.681 2.72 8.986 8.986 0 003.74.477m.94-3.197a5.971 5.971 0 00-.94 3.197M15 6.75a3 3 0 11-6 0 3 3 0 016 0zm6 3a2.25 2.25 0 11-4.5 0 2.25 2.25 0 014.5 0zm-13.5 0a2.25 2.25 0 11-4.5 0 2.25 2.25 0 014.5 0z"
  }
];
---

<Layout title="Services & Pricing - Hybrid Speech Therapy | Falcon Speech Services">
  <div class="max-w-7xl mx-auto">
    <!-- Header -->
    <div class="text-center mb-12">
      <h1 class="text-4xl font-bold text-gray-900">Services & Pricing</h1>
      <p class="mt-4 text-lg text-gray-600 max-w-3xl mx-auto">
        Hybrid speech therapy services combining in-home evaluations with flexible virtual therapy sessions for Hood River Gorge families
      </p>
    </div>


    <!-- Individual Session Rates -->
    <div class="mb-16">
      <div class="text-center mb-8">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">Individual Session Rates</h2>
        <p class="text-lg text-gray-600 max-w-3xl mx-auto">
          Flexible pay-per-session options for families who prefer individual scheduling
        </p>
      </div>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6 mb-12">
        <div class="bg-white p-6 rounded-lg shadow-md border-2 border-gray-100">
          <div class="text-center">
            <div class="text-3xl font-bold text-primary mb-2">$100</div>
            <div class="text-lg font-semibold mb-3">30-min Teletherapy</div>
            <div class="text-sm text-gray-600">Virtual sessions via secure video platform</div>
          </div>
        </div>
        
        <div class="bg-white p-6 rounded-lg shadow-md border-2 border-gray-100">
          <div class="text-center">
            <div class="text-3xl font-bold text-primary mb-2">$180</div>
            <div class="text-lg font-semibold mb-3">50-min Teletherapy</div>
            <div class="text-sm text-gray-600">Extended virtual sessions for older children</div>
          </div>
        </div>
        
        <div class="bg-white p-6 rounded-lg shadow-md border-2 border-gray-100">
          <div class="text-center">
            <div class="text-3xl font-bold text-primary mb-2">$135</div>
            <div class="text-lg font-semibold mb-3">45-min In-Person</div>
            <div class="text-sm text-gray-600">In-home therapy sessions</div>
          </div>
        </div>
        
        <div class="bg-white p-6 rounded-lg shadow-md border-2 border-gray-100">
          <div class="text-center">
            <div class="text-3xl font-bold text-primary mb-2">$180</div>
            <div class="text-lg font-semibold mb-3">60-min In-Person</div>
            <div class="text-sm text-gray-600">Extended in-home sessions</div>
          </div>
        </div>
      </div>
    </div>

    <!-- Evaluation Services -->
    <div class="mb-16">
      <div class="max-w-4xl mx-auto">
        <div class="bg-gray-50 rounded-xl p-8">
          <h2 class="text-3xl font-bold text-gray-900 mb-6 text-center">In-Home Evaluations</h2>
          <p class="text-lg text-gray-600 mb-8 text-center max-w-3xl mx-auto">
            All evaluations are conducted in-person in the comfort of your home. Kailey will bring all necessary materials and will work with your child in a familiar environment to help ensure the most accurate and supportive assessment experience.
          </p>
          
          <div class="space-y-4">
            <div class="bg-white rounded-lg p-4 border-l-4 border-primary">
              <div class="flex justify-between items-center">
                <div>
                  <div class="font-semibold text-gray-900">Speech or Language Evaluation</div>
                  <div class="text-sm text-gray-600">Focus on one area: speech-only or language-only concerns</div>
                </div>
                <div class="text-2xl font-bold text-primary">$250</div>
              </div>
            </div>
            
            <div class="bg-white rounded-lg p-4 border-l-4 border-primary">
              <div class="flex justify-between items-center">
                <div>
                  <div class="font-semibold text-gray-900">Comprehensive Speech and Language</div>
                  <div class="text-sm text-gray-600">Full assessment of both speech and language skills</div>
                </div>
                <div class="text-2xl font-bold text-primary">$500</div>
              </div>
            </div>
          </div>
          
          <a href="/schedule" class="block w-full text-center bg-primary text-white px-6 py-3 rounded-lg font-medium hover:bg-primary-700 mt-6">
            Book Evaluation
          </a>
        </div>
      </div>
    </div>



    <!-- Hybrid Model Explanation -->
    <div class="mb-16 bg-blue-50 rounded-xl p-8">
      <h2 class="text-3xl font-bold text-gray-900 mb-6 text-center">Our Hybrid Model Explained</h2>
      <div class="grid md:grid-cols-2 gap-8">
        <div>
          <div class="flex items-center mb-4">
            <div class="bg-blue-100 p-3 rounded-full mr-4">
              <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-gray-900">In-Home Sessions</h3>
          </div>
          <p class="text-gray-600 mb-4">
            We come directly to your home for evaluations and some therapy sessions, providing assessment and treatment in your child's most natural environment.
          </p>
          <ul class="space-y-2 text-sm text-gray-600">
            <li class="flex items-center">
              <svg class="w-4 h-4 text-green-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              More accurate assessment results
            </li>
            <li class="flex items-center">
              <svg class="w-4 h-4 text-green-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              Comfortable, familiar environment
            </li>
            <li class="flex items-center">
              <svg class="w-4 h-4 text-green-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              No travel stress for families
            </li>
          </ul>
        </div>
        
        <div>
          <div class="flex items-center mb-4">
            <div class="bg-green-100 p-3 rounded-full mr-4">
              <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-gray-900">Virtual Sessions</h3>
          </div>
          <p class="text-gray-600 mb-4">
            Regular therapy sessions conducted online provide consistent support with maximum flexibility, alternating with in-home visits on a schedule that works for your family.
          </p>
          <ul class="space-y-2 text-sm text-gray-600">
            <li class="flex items-center">
              <svg class="w-4 h-4 text-green-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              Flexible scheduling around your life
            </li>
            <li class="flex items-center">
              <svg class="w-4 h-4 text-green-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              Weather-independent sessions
            </li>
            <li class="flex items-center">
              <svg class="w-4 h-4 text-green-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              Interactive digital therapy tools
            </li>
          </ul>
        </div>
      </div>
    </div>

    <!-- Services Grid -->
    <div class="mb-16">
      <h2 class="text-3xl font-bold text-gray-900 mb-8 text-center">Our Therapy Services</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {services.map(service => (
          <div class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow">
            <div class="text-primary mb-4">
              <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={service.icon} />
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-3">{service.title}</h3>
            <p class="text-gray-600 mb-4">{service.description}</p>
            <div class="mt-4">
              <a
                href={`/schedule?service=${encodeURIComponent(service.title.toLowerCase())}`}
                class="inline-flex items-center text-primary hover:text-primary-700"
              >
                Schedule Evaluation
                <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </a>
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- Neurodiversity Affirming Section -->
    <div class="mb-16 bg-purple-50 rounded-xl p-8">
      <h2 class="text-3xl font-bold text-gray-900 mb-6 text-center">Neurodiversity Affirming Therapy</h2>
      <div class="max-w-4xl mx-auto">
        <p class="text-lg text-gray-600 mb-6 text-center">
          Our approach celebrates and supports each individual's unique way of communicating, focusing on strengths rather than deficits.
        </p>
        <div class="grid md:grid-cols-3 gap-6">
          <div class="text-center">
            <div class="bg-purple-100 p-4 rounded-full w-16 h-16 mx-auto mb-4 flex items-center justify-center">
              <svg class="w-8 h-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
              </svg>
            </div>
            <h3 class="font-semibold text-gray-900 mb-2">Strength-Based</h3>
            <p class="text-sm text-gray-600">Building on each individual's natural abilities and interests</p>
          </div>
          <div class="text-center">
            <div class="bg-purple-100 p-4 rounded-full w-16 h-16 mx-auto mb-4 flex items-center justify-center">
              <svg class="w-8 h-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
              </svg>
            </div>
            <h3 class="font-semibold text-gray-900 mb-2">Collaborative</h3>
            <p class="text-sm text-gray-600">Working with families as equal partners in the therapeutic process</p>
          </div>
          <div class="text-center">
            <div class="bg-purple-100 p-4 rounded-full w-16 h-16 mx-auto mb-4 flex items-center justify-center">
              <svg class="w-8 h-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"></path>
              </svg>
            </div>
            <h3 class="font-semibold text-gray-900 mb-2">Respectful</h3>
            <p class="text-sm text-gray-600">Honoring different ways of communicating and being in the world</p>
          </div>
        </div>
      </div>
    </div>


    <!-- CTA Section -->
    <div class="text-center">
      <h2 class="text-3xl font-bold text-gray-900 mb-4">Ready to Get Started?</h2>
      <p class="text-lg text-gray-600 mb-8 max-w-2xl mx-auto">
        Schedule your in-home evaluation today and discover how our hybrid model can transform your child's communication journey.
      </p>
      <div class="flex justify-center space-x-4">
        <a href="/schedule" class="bg-primary text-white px-8 py-3 rounded-lg font-medium hover:bg-primary-700">
          Book Your Evaluation
        </a>
        <a href="/contact" class="border border-primary text-primary px-8 py-3 rounded-lg font-medium hover:bg-primary-50">
          Ask Questions
        </a>
      </div>
    </div>
  </div>
</Layout>