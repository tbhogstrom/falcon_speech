---

<Layout title="Our Services">
  <div class="max-w-7xl mx-auto">
    <div class="text-center mb-12">
      <h1 class="text-4xl font-bold text-gray-900">Our Services</h1>
      <p class="mt-4 text-lg text-gray-600">Comprehensive speech therapy services for all ages and needs</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {services.map(service => (
        <div class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow">
          <div class="text-primary mb-4">
            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={service.icon} />
            </svg>
          </div>
          <h2 class="text-xl font-semibold text-gray-900 mb-3">{service.title}</h2>
          <p class="text-gray-600">{service.description}</p>
          <div class="mt-4">
            <a
              href={`/schedule?service=${encodeURIComponent(service.title.toLowerCase())}`}
              class="inline-flex items-center text-primary hover:text-primary-700"
            >
              Schedule Now
              <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </a>
          </div>
        </div>
      ))}
    </div>

    <div class="mt-16 bg-gray-50 rounded-lg p-8">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="text-2xl font-bold text-gray-900 mb-4">Not sure which service you need?</h2>
        <p class="text-gray-600 mb-6">
          Contact us for a free consultation. Our experts will help determine the best treatment plan for you or your loved one.
        </p>
        <a
          href="/contact"
          class="inline-flex items-center justify-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-primary hover:bg-primary-700"
        >
          Get in Touch
        </a>
      </div>
    </div>
  </div>
</Layout>